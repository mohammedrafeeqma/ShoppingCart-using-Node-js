<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">no</th>
                    <th scope="col">title</th>
                    <th scope="col">category</th>
                     <th scope="col">description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.Name}} </td>
                    <td>{{this.Category}} </td>
                    <td>{{this.Description}} </td>
                    <td><img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg"> </td>
                    <td><a class="btn btn-primary" href="/admin/edit-product?id={{this._id}}&name={{this.Name}}">Edit</a></td>
                    <td><a onclick='return confirm("are you sure?")' class="btn btn-danger" href="/admin/delete-product/{{this._id}}">Delete</a></td>
                    

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>